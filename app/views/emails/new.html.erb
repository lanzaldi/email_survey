<ul>
<% @email.errors.full_messages.each do |m| %>
<li> <%= m %> </li>
<% end %>
</ul>

<%= form_for @email, :url => emails_path(@email, :token => params[:token]) do |f| %>
	<%= f.label "Please enter the email address at which you would like to receive our surveys:" %>
	<%= f.text_field :email %>
	<%= f.submit "Submit" %>
<% end %>

	<div class="container">
		<%= debug(params) if Rails.env.development? %>
	</div>